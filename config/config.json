{
  "settings": {
    "download_dir": "/some folder",
    "data_dir": "/another folder",
    "mappings": [
      {
        "replace": "filename",
        "with": "%episode_date%-%episode_url_basename%%episode_url_extension%"
      },
      {
        "replace": "tag_title",
        "with": "%episode_title%"
      },
      {
        "replace": "tag_artist",
        "with": "%config_name%"
      },
      {
        "replace": "tag_album",
        "with": "%feed_title%"
      },
      {
        "replace": "tag_summary",
        "with": "%episode_summary%"
      },
      {
        "replace": "tag_date",
        "with": "%episode_date%"
      }
    ]
  },
  "feeds": [
    {
      "name": "Pseudopod",
      "url": "https://pseudopod.org/feed/podcast/",
      "mappings": [
        {
          "replace": "filename",
          "with": "%episode_date%-%episode_url_basename%%episode_url_extension%"
        },
        {
          "replace": "tag_title",
          "with": "%title%"
        },
        {
          "replace": "tag_artist",
          "with": "%artist%"
        },
        {
          "replace": "tag_album",
          "with": "%album%"
        },
        {
          "replace": "tag_comment",
          "with": "%summary%"
        },
        {
          "replace": "tag_date",
          "with": "%date%"
        }
      ]
    }
  ]
}
